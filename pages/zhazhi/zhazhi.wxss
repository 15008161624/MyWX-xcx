.t1{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 10rpx;
}
.f1{
    font-size: 52rpx;
    color: black;
    padding: 30rpx  0;
}
.f1::after{
    display: block;
    content: ' ';
    width: 80rpx;
    height: 4rpx;
    background-color: #999;
    margin: 20rpx 0 0 0;
}
.f2{
    font-size: 30rpx;
    padding-bottom:30rpx; 
}
.f3 image{
    width: 730rpx;
}
.f4 text{
    display: inline-block;
    border: 1rpx solid #000;
    padding: 10rpx 18rpx;
    margin: 20rpx 20rpx 20rpx 18rpx;
    font-size: 28rpx;
}
.f4 text:first-of-type{
    background-color: #000;
    color: #fff;
    font-weight: bold;
}
.f4 text:last-of-type{
    color: #000;
    font-weight: bolder;
}

.m1 image{
    width: 66rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 10rpx;
}
.m1{
    padding: 20rpx;
    font-size: 28rpx;
}

.m2 image{
   width: 695rpx;
}
.m2{
    text-align: center;
    padding: 0 0 20rpx;
    font-size: 38rpx;
}
.mm{
    background-color: #ebebeb;
    padding: 30rpx 30rpx 0;
}
.m{
    background-color: #fff;
    padding-bottom: 40rpx;
}
.m3 image{
    width: 40rpx;
    height: 40rpx;
    float: right;
}
.m3 text{
    border: 1rpx solid #000;
    padding: 8rpx 20rpx;
    font-size: 30rpx;
}
.m3{
    margin-left: 25rpx;
    margin-right:20rpx; 
}
.m3 button{
    background: transparent;
    display: inline-block;
    float: right;
}
.m3 button::after{
   border: none;
}